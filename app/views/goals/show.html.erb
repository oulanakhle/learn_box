<div class="goal-show__wrapper">
  <div class="goal-show__top-content">
    <div class="goal-show__goal-word">
    Manage tasks and mark them as complete
    </div>
    <div class="goal-show__goal-title">
    <%= @goal.name %>
    </div>
    <div class="add-task-btn">
     <%= link_to "Add task", new_goal_task_path(@goal), class: "add-task-btn2" %>
    </div>
  </div>
   <div class="task-card__row">
      <% @goal.tasks.each_with_index do |task, index| %>
         <div class="task-card  <%= task.completed ? 'active' : '' %>" id="taskId<%= task.id %>">
          <div class="task-card-left">
            <!--  -->
                <%= link_to update_complete_path(task), method: "post", remote: true do %>
                  <%= image_tag "check.svg", class:'task-card-check' %>
                  <%= image_tag "check-white.svg", class:'task-card-check-white' %>
                <% end %>
                <%= link_to image_tag("edit.svg"), edit_goal_task_path(@goal, task), class:"task-card-edit"  %>
                <%= link_to image_tag("edit-white.svg"), edit_goal_task_path(@goal, task), class:"task-card-edit-white"  %>
                <h2 class="task-card-taskname"><%= task.name %>
                </h2>
             </div>
             <%= link_to image_tag("delete-white.svg"), goal_task_path(@goal, task), method: "delete",class:"task-card-delete-white" %>
             <%= link_to image_tag("delete.svg"), goal_task_path(@goal, task), method: "delete",class:"task-card-delete" %>
        </div>
      <% end %>
      <div class="link-container">
        <div class="youtube-container">
          <div class="youtube-card">
            <div class="youtube-front">
              <i class="fab fa-youtube"></i>
            </div>
            <div class="youtube-back">
              <%= @links.last.name %>
            </div>
          </div>
        </div>
        <div class="drive-container">
          <div class="drive-card">
            <div class="drive-front">
              <i class="fab fa-google-drive"></i>
            </div>
            <div class="drive-back">
              <%= @links.last.name %>
            </div>
          </div>
        </div>
        <div class="drop-container">
          <div class="drop-card">
            <div class="drop-front">
              <i class="fab fa-dropbox">
              </i>
            </div>
            <div class="drop-back">
              <%= @links.last.name %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

