<div class = "bg-grey">
  <div class="container ">
    <div class="row">
      <div class="col-xs-12">
        <h3 class="dashboard__h3 top-padding">Browse and add goals to your dashboard</h3>
      </div>
      <div class="col-xs-12">
        <div class="search-form">
          <div class="search-rectangle">
            <%= form_tag goals_path, method: :get do %>
          </div>
            <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Try searching for something you want to learn" %>
        <% end %>
        </div>
        <h4 class="dashboard__h4 sm-padding">Select your difficulty</h4>
        <div class="goal-index-filter">
          <div class="goal_index-filter__box" id="easy-parent">
            <%= link_to difficulty: "easy", remote: true do %>
            <!-- #remote: true -->
              <div class="goal-index-filter__green ">
              </div>
            <% end %>
          </div>

          <div class="goal_index-filter__box" id="medium-parent">
            <%= link_to difficulty: "medium", remote: true do %> <!-- #remote: true -->
              <div class="goal-index-filter__orange"></div>
            <% end %>
          </div>
          <div class="goal_index-filter__box" id="hard-parent">
            <%= link_to difficulty: "hard", remote: true do %> <!-- #remote: true -->
              <div class="goal-index-filter__red"></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="dashboard__cards-wrapper sm-padding">
      <div class="row" id="row__card-holder">
        <%= render 'shared/goal-card' %>
      </div>
      <div class="col-xs-12">
        <div class=" dashboard__parent-btns text-center sm-padding">
          <%= link_to "DASHBOARD", dashboard_path, class: "btn btn-orange dashboard__btn-side-margin" %>
        </div>
      </div>
    </div>
  </div>
</div>
