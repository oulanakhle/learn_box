<div class="login__wrapper" style="background-image: url('<%= image_path('sign-in.png') %>')">
  <div class="container ctn-login">
      <div class="login-top">
        <h3>SIGN IN</h3>
      </div>
        <div class="sign-in-box">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs login-username login-password">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "your email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions text-center">
            <%= f.button :submit, "SIGN IN", class: "navbar-learnbox-item navbar-learnbox-link-sign-up" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

        </div>
  </div>
</div>
