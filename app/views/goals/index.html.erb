<div class = "bg-grey">
  <div class="container ">
    <div class="row">
      <div class="col-xs-12">
        <h3 class="dashboard__h3 top-padding">Browse and add goals to your dashboard ðŸ‘‡</h3>
      </div>
      <div class="col-xs-12">
        <h4 class="dashboard__h4 ">Select your difficulty</h4>
        <div class="goal-index-filter">
          <div class="goal_index-filter__box">
            <%= link_to difficulty: "easy" do %>
            <!-- #remote: true -->
              <div class="goal-index-filter__green ">
              </div>
            <% end %>
          </div>

          <div class="goal_index-filter__box">
            <%= link_to difficulty: "medium" do %> <!-- #remote: true -->
              <div class="goal-index-filter__orange"></div>
            <% end %>
          </div>
          <div class="goal_index-filter__box">
            <%= link_to difficulty: "hard" do %> <!-- #remote: true -->
              <div class="goal-index-filter__red"></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="dashboard__cards-wrapper lg-padding">
      <div class="row">
        <%= render 'shared/goal-card' %>
      </div>
      <div class="col-xs-12">
        <div class=" dashboard__parent-btns text-center xs-margin">
          <%= link_to "DASHBOARD", dashboard_path, class: "btn btn-orange dashboard__btn-side-margin" %>
        </div>
      </div>
    </div>
  </div>
</div>
