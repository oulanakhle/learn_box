<div class="container ctn-login">
  <div class="login-top">
    <h3><strong>Create your goal</strong></h3>
  </div>
  <div class="login-box">
    <%= simple_form_for(@goal) do |f| %>
      <% if @goal.errors.any? %>
        <div class="errors-container">
          <ul>
            <% @goal.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.input :name %>
      <%= f.input :difficulty %>
      <%= f.input :description %>
      <%= f.input :datetime, as: :string, required: false, input_html: {class: "datepicker"}%>

      <%= f.submit "host a dinner", class: "btn btn-danger" %>
      <!-- [...] all the fields -->
    <% end %>

  </div>
</div>
